{
	"name": "webext-options-sync-per-domain",
	"version": "3.0.0",
	"description": "Helps you manage and autosave your extension's options, separately for each additional permission.",
	"keywords": [
		"browser",
		"chrome",
		"extension",
		"firefox",
		"options",
		"sync",
		"domain",
		"origins",
		"request",
		"host",
		"webext"
	],
	"type": "module",
	"repository": "fregante/webext-options-sync-per-domain",
	"license": "MIT",
	"author": "Federico Brigante <me@fregante.com> (https://fregante.com)",
	"main": "index.js",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepack": "tsc --sourceMap false",
		"test": "tsc --noEmit && xo",
		"watch": "tsc --watch"
	},
	"xo": {
		"envs": [
			"browser"
		],
		"globals": [
			"chrome"
		],
		"rules": {
			"@typescript-eslint/no-floating-promises": "off",
			"@typescript-eslint/prefer-readonly-parameter-types": "off",
			"import/no-unassigned-import": "off",
			"unicorn/no-fn-reference-in-iterator": "off"
		}
	},
	"dependencies": {
		"mem": "^9.0.2",
		"webext-additional-permissions": "^2.3.0",
		"webext-detect-page": "^4.0.1",
		"webext-options-sync": "^3.1.0",
		"webext-patterns": "^1.2.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/chrome": "0.0.193",
		"esm": "^3.2.25",
		"type-fest": "^2.16.0",
		"typescript": "^4.7.4",
		"xo": "^0.50.0"
	}
}
